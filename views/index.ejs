    <div id="wrapper">
        <!-- Main -->
        <section id="main" class="wrapper">
            <div class="inner" style="padding-top: 40px;">
                <script>
                    function copyButton() {
                        var copyText = document.URL;

                        // Copy the text inside the text field
                        navigator.clipboard.writeText(copyText);

                        var tooltip = document.getElementById("myTooltip");
                        tooltip.innerHTML = "Copied!";

                    }

                    function outFunc() {
                        var tooltip = document.getElementById("myTooltip");
                        tooltip.innerHTML = "Copy to clipboard";
                    }
                </script>
                <center>
                    Welcome to the Ca-PEE-tal tracker where you track each US state capital you've urinated!
                    <h2 id="amount"></h2>
                    <div id="regions_div"></div>
                    <br \>
                    Share on:
                    <ul class="share-buttons" data-source="simplesharingbuttons.com">
                        <li><a href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fcapeetaltracker.com%2F&quote="
                                title="Share on Facebook" target="_blank"
                                onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&quote=' + encodeURIComponent(document.URL)); return false;"><img
                                    alt="Share on Facebook" src="/images/share/icons8-facebook.svg" /></a></li>
                        <li><a href="https://twitter.com/intent/tweet?source=https%3A%2F%2Fcapeetaltracker.com%2F&text=:%20https%3A%2F%2Fcapeetaltracker.com%2F"
                                target="_blank" title="Tweet"
                                onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL)); return false;"><img
                                    alt="Tweet" src="/images/share/icons8-twitterx.svg" /></a></li>
                        <li><a href="mailto:?subject=&body=:%20https%3A%2F%2Fcapeetaltracker.com%2F" target="_blank"
                                title="Send email"
                                onclick="window.open('mailto:?subject=' + encodeURIComponent(document.title) + '&body=' +  encodeURIComponent(document.URL)); return false;"><img
                                    alt="Send email" src="images/share/Email.svg" /></a></li>
                        <li>
                            <div class="tooltip">
                                <button onclick="copyButton()" onmouseout="outFunc()">
                                  <span class="tooltiptext" id="myTooltip">Press to copy</span>
                                  Copy URL
                                  </button>
                                </div>
                        </li>
                    </ul>
                </center>
            </div>
        </section>
    </div>

